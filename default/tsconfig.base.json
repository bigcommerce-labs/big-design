{
  "compilerOptions": {
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "isolatedModules": true,
    "pretty": true,
    "lib": ["dom", "es2015", "es2016"]
  },
  "includes": ["src"],
  "exclude": ["node_modules", "dist", "stories", "tests", "src/**/__tests__"],
  "plugins": [
    {
      "name": "typescript-styled-plugin"
    }
  ]
}
