{
  "name": "@bigcommerce/storybook",
  "private": true,
  "version": "0.1.1",
  "license": "MIT",
  "scripts": {
    "start": "yarn run storybook",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "ci": "yarn run lint && build-storybook",
    "lint": "yarn run lint:tslint && yarn run lint:tsc && yarn run lint:prettier",
    "lint:prettier": "prettier --check 'stories/**/*.{ts,tsx}'",
    "lint:tsc": "tsc --noEmit",
    "lint:tslint": "tslint -c tslint.json -p tsconfig.json",
    "precommit": "lint-staged",
    "prepublishOnly": "rimraf storybook-static && yarn run ci"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@bigcommerce/big-design": "^0.1.1",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@bigcommerce/configs": "^0.1.0",
    "@storybook/addon-a11y": "^5.0.3",
    "@storybook/addon-actions": "^5.0.3",
    "@storybook/addon-backgrounds": "^5.0.3",
    "@storybook/addon-info": "^5.0.3",
    "@storybook/addon-knobs": "^5.0.3",
    "@storybook/addon-links": "^5.0.3",
    "@storybook/addon-options": "^5.0.3",
    "@storybook/addon-storysource": "^5.0.3",
    "@storybook/addon-viewport": "^5.0.3",
    "@storybook/addons": "^5.0.3",
    "@storybook/react": "^5.0.3",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.2",
    "@types/storybook__addon-a11y": "^5.0.0",
    "@types/storybook__addon-actions": "^3.4.2",
    "@types/storybook__addon-backgrounds": "^4.1.1",
    "@types/storybook__addon-knobs": "^4.0.4",
    "@types/storybook__addon-viewport": "^4.1.0",
    "@types/storybook__react": "^4.0.1",
    "@types/styled-components": "^4.1.12",
    "babel-loader": "^8.0.5",
    "rimraf": "^2.6.3",
    "ts-loader": "^5.3.3"
  }
}
