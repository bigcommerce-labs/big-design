{
  "name": "@bigcommerce/plab",
  "version": "1.0.0",
  "sideEffects": false,
  "main": "dist/plab.cjs.js",
  "module": "dist/plab.es.js",
  "typings": "dist/index.d.ts",
  "author": "BigCommerce Inc",
  "repository": "git@github.com:bigcommerce-labs/plab-playground.git",
  "license": "UNLICENSED",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c rollup.config.js",
    "build:icons": "svgr --ext=tsx src/components/Icons/svg -d src/components/Icons",
    "ci": "yarn run lint && yarn run test && yarn run build",
    "start": "NODE_ENV=dev yarn run build --watch",
    "lint": "yarn run lint:tslint && yarn run lint:tsc && yarn run lint:prettier",
    "lint:prettier": "prettier --check 'src/**/*.{ts,tsx}'",
    "lint:tsc": "tsc --noEmit",
    "lint:tslint": "tslint -c tslint.json -p tsconfig.json",
    "test": "jest",
    "test:watch": "npm test -- --watchAll",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "polished": "^3.0.3",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-popper": "^1.3.3",
    "styled-components": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.1.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@plab/configs": "1.0.0",
    "@svgr/cli": "^4.1.0",
    "@types/jest": "^24.0.11",
    "@types/react": "^16.8.7",
    "@types/react-dom": "^16.8.0",
    "@types/react-test-renderer": "^16.0.2",
    "@types/styled-components": "^4.1.12",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^24.3.1",
    "babel-loader": "^8.0.4",
    "babel-plugin-styled-components": "^1.10.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "jest": "^24.3.1",
    "jest-styled-components": "^6.3.1",
    "react-test-renderer": "^16.8.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.6.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-typescript2": "^0.19.3"
  }
}
