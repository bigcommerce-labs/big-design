{
  "extends": "@bigcommerce/configs/ts",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noUnusedLocals": false,
    "noImplicitAny": false
  },
  "include": [
    "next-env.d.ts",
    "styled.d.ts",
    "global.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
