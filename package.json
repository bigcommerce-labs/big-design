{
  "name": "big-design",
  "private": true,
  "license": "SEE LICENSE IN LICENSE.md",
  "packageManager": "pnpm@8.15.8",
  "scripts": {
    "build": "turbo build",
    "build:icons": "turbo build --filter @bigcommerce/big-design-icons",
    "ci:test": "turbo test -- --maxWorkers=2 --coverage",
    "lint": "eslint . --ext .ts,.tsx,.js,.mdx --max-warnings 0",
    "start": "turbo start --filter @bigcommerce/docs",
    "test": "turbo test",
    "typecheck": "turbo typecheck",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,ts,tsx,mdx}": [
      "eslint --fix"
    ]
  },
  "prettier": "@bigcommerce/eslint-config/prettier",
  "devDependencies": {
    "@bigcommerce/eslint-config": "^2.9.0",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.3",
    "@types/babel__standalone": "^7.1.4",
    "eslint": "^8.33.0",
    "eslint-plugin-mdx": "^3.1.5",
    "husky": "^9.0.11",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.2",
    "turbo": "^2.0.14",
    "typescript": "^5.4.5"
  }
}
